<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regHeader"
        android:text="Student Registration"
        android:layout_centerHorizontal="true"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_below="@id/regHeader"
        android:layout_marginTop="10dp"
        android:src="@drawable/camera"
        android:id="@+id/regIcon"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_open_camera"
        android:textAllCaps="false"
        android:layout_below="@id/regIcon"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_open_camera"
        android:id="@+id/rel_reg"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Email Address"
                android:background="@drawable/editbackground"
                android:drawableTint="@color/teal_700"
                android:paddingLeft="5dp"
                android:textColorHint="@color/teal_700"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:allowUndo="true"
                android:textColor="@color/teal_700"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reg_name"
            android:layout_below="@id/reg_email"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Enter name"
                android:background="@drawable/editbackground"
                android:drawableTint="@color/teal_700"
                android:paddingLeft="5dp"
                android:textColorHint="@color/teal_700"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:allowUndo="true"
                android:textColor="@color/teal_700"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/reg_password"
            android:id="@+id/reg_confirm_password"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Confirm Password"
                android:background="@drawable/editbackground"
                android:drawableTint="@color/teal_700"
                android:paddingLeft="5dp"
                android:textColorHint="@color/teal_700"
                android:ems="10"
                android:inputType="textPassword"
                android:allowUndo="true"
                android:textColor="@color/teal_700"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/reg_name"
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Password"
                android:background="@drawable/editbackground"
                android:drawableTint="@color/teal_700"
                android:paddingLeft="5dp"
                android:textColorHint="@color/teal_700"
                android:ems="10"
                android:inputType="textPassword"
                android:allowUndo="true"
                android:textColor="@color/teal_700"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:drawableRight="@drawable/rightarrow"
        android:drawableTint="@color/teal_700"
        android:layout_below="@id/rel_reg"
        android:layout_marginLeft="20dp"
        android:id="@+id/nextPage"/>
</RelativeLayout>