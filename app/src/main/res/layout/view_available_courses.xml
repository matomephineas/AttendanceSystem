<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp">
    <RelativeLayout
        android:id="@+id/linearv"
        android:padding="5dp"
        android:background="@drawable/editbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information and communication technology"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
           android:layout_below="@id/view_course_name"
            android:layout_marginTop="8dp"
            android:id="@+id/view_course_code"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="ICT"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_below="@id/view_course_code"
            android:layout_marginTop="8dp"
            android:id="@+id/view_course_faculty"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>