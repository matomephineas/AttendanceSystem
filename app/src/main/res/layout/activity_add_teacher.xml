<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    tools:context=".Admin.AddTeacher">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="Create lecture"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/lin"
        android:layout_below="@id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:id="@+id/reg_driver_Name"
            android:layout_below="@id/textView2"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Names"
                android:drawableTint="@color/teal_700"
                android:background="@drawable/editbackground"
                android:paddingLeft="5dp"
                android:textColorHint="@color/white"
                android:ems="10"

                android:inputType="text"
                android:allowUndo="true"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_below="@id/reg_driver_Name"
            android:id="@+id/reg_driver_email_address"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Email"
                android:drawableTint="@color/teal_700"
                android:background="@drawable/editbackground"
                android:paddingLeft="5dp"
                android:textColorHint="@color/white"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:allowUndo="true"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:id="@+id/reg_driver_phone"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Phone"
                android:drawableTint="@color/teal_700"
                android:background="@drawable/editbackground"
                android:paddingLeft="5dp"
                android:textColorHint="@color/white"
                android:ems="10"
                android:maxLength="10"
                android:inputType="phone"
                android:allowUndo="true"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:id="@+id/reg_driver_password"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Password"
                android:drawableTint="@color/teal_700"
                android:background="@drawable/editbackground"
                android:paddingLeft="5dp"
                android:textColorHint="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:allowUndo="true"

                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"

            android:id="@+id/reg_driver_confirm_password"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint=" Confirm password"
                android:drawableTint="@color/teal_700"
                android:background="@drawable/editbackground"
                android:paddingLeft="5dp"
                android:textColorHint="@color/white"
                android:ems="10"


                android:allowUndo="true"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_driver"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create Account"
        android:textAllCaps="false" />
    <TextView
        android:id="@+id/txt_alrdy_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@id/btn_register_driver"
        android:layout_centerHorizontal="true"
        android:text="Already registered? Login here"
        android:textColor="@color/black"
        android:textSize="15sp" />


</RelativeLayout>